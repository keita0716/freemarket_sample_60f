.registration__login__container 
  .signup__simple__header
    .signup__simple__header__logo
      = link_to root_path do
        = image_tag 'fmarket_logo_red.svg', alt: 'logo', class: 'devise-header__link__image', height: '49', width: '185'
  %main.login
    .login__box
      .login__box__top
        .login__box__top__text アカウントをお持ちでない方はこちら
        .login__box__top__button
          .login__box__top__button__email
            = link_to new_user_registration_path, class: "btn-default btn-mail" do
              新規会員登録
      .login__box__session__omniauth
        = link_to user_facebook_omniauth_authorize_path, class: 'login__box__session__omniauth__facebook' do
          Facebookでログイン
          %i.fab.fa-facebook
        = link_to user_google_oauth2_omniauth_authorize_path, class: 'login__box__session__omniauth__google' do
          Googleでログイン
          %i.fab.fa-google-plus-g
      .login__box__form
        = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
          .field
            = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス"
          .field
            = f.password_field :password, autocomplete: "current-password", placeholder: "パスワード"
          .actions
            = f.submit "ログイン"
          .forget__password
            = render "devise/shared/links"
  = render "devise/shared/registration_login_footer"

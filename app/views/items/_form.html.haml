.item__exhibit__container__header
  .item__exhibit__simple__header
    .item__exhibit__simple__header__logo
      = link_to root_path do
        = image_tag 'fmarket_logo_red.svg', alt: 'logo', class: 'purchase__header__link__image', height: '49', width: '185'
  .item__exhibit
    .item__exhibit__main
      %h2.item__exhibit__main__head 商品の情報を入力
      = form_for @item, html: { class: ‘exhibition_form’ }  do |f|
        .item__exhibit__main__form__image
          .field__image
            %span.label 出品画像
            %span.required 必須
            %br/
            %span.label__s 最大10枚までアップロードできます
            %br/
            #image-box
              #previews
                - if @item.persisted?
                  - @item.images.each_with_index do |image, i|
                    = image_tag image.src.url, data: { index: i }, width: "100", height: '100'
              = f.fields_for :images do |image|
                .js-file_group{"data-index" => "#{image.index}"}
                  = image.file_field :src, class: 'js-file'
                  %br/
                  %span.js-remove 削除
                - if @item.persisted?
                  = image.check_box :_destroy, data:{ index: image.index }, class: 'hidden-destroy'
              - if @item.persisted?
                .js-file_group{"data-index" => "#{@item.images.count}"}
                  = file_field_tag :src, name: "item[images_attributes][#{@item.images.count}][src]", class: 'js-file'
                  .js-remove 削除
        .item__exhibit__main__form__name
          .field
            %span.label 商品名
            %span.required 必須
            %br/
            = f.text_field :name, placeholder: "商品名(必須40文字まで)"
          .field
            %span.label 商品の説明
            %span.required 必須
            %br/
            = f.text_area :description , class: "items-new-form-area__default", placeholder: "商品の説明（必須 1,000文字以内）（色、素材、重さ、定価、注意点など）例）2010年頃に1万円で購入したジャケットです。ライトグレーで傷はありません。あわせやすいのでおすすめです。", rows: "5"
        .item__exhibit__main__form__detail
          .field
            %label
              カテゴリー
              %span
                必須
            %div
              .select-wrap
                %i.fa.fa-angle-down
                = f.select :condition ,{prompt: '---'}
          .field
            %label
              商品の状態
              %span
                必須
            %div
              .select-wrap
                %i.fa.fa-angle-down
                = f.select :condition ,{prompt: '---'}

        .item__exhibit__sell__content.clearfix
          %h3
            配送について
          = link_to "?", 'https://www.mercari.com/jp/help_center/article/68/', class:"round-icon" 
          .sell__form__box
            .sell__field
              %label
                配送料の負担
                %span
                  必須
              %div
                .select__wrap
                  %i.fa.fa-angle-down
                  = f.select :condition ,{prompt: '---'}
            .sell__field
              %label
                配送の方法
                %span
                  必須
              %div
                .select__wrap
                  %i.fa.fa-angle-down
                  = f.select :shipping_method ,{prompt: '---'}
            .sell__field
              %label
                発送元の地域
                %span
                  必須
              %div
                .select__wrap
                  %i.fa.fa-angle-down
                  = f.select :shipping_prefecture ,{prompt: '---'}
                  -# = collection_select :person, :prefecture_id, Prefecture.all, :id, :name
            .sell__field
              %label
                発送までの日数
                %span
                  必須
              %div
                .select__wrap
                  %i.fa.fa-angle-down
                  = f.select :shipping_date ,{prompt: '---'}
        .sell__content.clearfix
          %h3
            販売価格(300〜9,999,999)
          = link_to "?", 'https://www.mercari.com/jp/help_center/article/64/', class:"round__icon" 
          .sell__form__box
            %ul
              %li.price__group
                .clear-fix
                  .sell__price__title
                    %label
                      価格
                      %span
                        必須
                  .sell__price__input
                    %p
                      ¥
                    %div
                      = f.number_field :price, min:300, max:9999999, class: "inputde-dfault", id: "sell-price", placeholder: "例）300", value: ""
              %li.price__group.border
                .clear-fix
                  .sell__price__title
                    販売手数料(10%)
                  .sell__price__input
                    .right
                      #mercari_fee
              %li.price__group.border
                .clear-fix
                  .sell__price__title.bold
                    販売利益
                  .sell__price__input
                    .right
                      #seller_gain
        .sell__content.exhibit-btn
          %div
            %p
              = link_to "禁止されている出品", 'https://www.mercari.com/jp/help_center/getting_started/prohibited_items/', class:"link-blue" 
              、
              = link_to "行為", 'https://www.mercari.com/jp/help_center/getting_started/prohibited_conduct/', class:"link-blue" 
              を必ずご確認ください。
            
            %p
              またブランド品でシリアルナンバー等がある場合はご記載ください。
              = link_to "偽ブランドの販売", 'https://www.mercari.com/jp/help_center/getting_started/counterfeit_goods/', class:"link-blue" 
              は犯罪であり処罰される可能性があります。
            %p
              また、出品をもちまして
              = link_to "加盟店規約", 'https://www.mercari.com/jp/help_center/getting_started/counterfeit_goods/', class:"link-blue" 
              に同意したことになります。

            = f.submit "出品する"

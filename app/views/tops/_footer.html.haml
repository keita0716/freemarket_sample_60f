            %li
              = link_to "#" do
                = fa_icon 'twitter'
            %li
              = link_to "#" do
                = fa_icon 'facebook-square'
      .footer__top__content
        %h2 ヘルプ＆ガイド
        %ul
          %li
            = link_to "フリマガイド", "#"
          %li
            = link_to "らくらくフリマ便", "#"
          %li
            = link_to "ゆうゆうフリマ便", "#"
          %li
            = link_to "大型フリマ便", "#"
          %li
            = link_to "車体取引ガイド", "#"
          %li
            = link_to "フリマあんしん・あんぜん宣言！", "#"
          %li
            = link_to "偽ブランド品撲滅への取り組み", "#"
          %li
            = link_to "フリマボックス", "#"

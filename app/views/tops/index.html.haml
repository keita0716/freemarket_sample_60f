.header
  = render 'header'

.contents
  .ad
    = link_to '*' do
      広告

  .categories
    .category
      .h1
        人気のカテゴリー
    %ul.category_list
      /最終的にeachでまとめることになる
      %li.category_list__left
        = link_to '*' do
          カテゴリー１
      %li.category_list__right
        = link_to '*' do
          カテゴリー２

  .items
    .top_contents
      .top_contents__left
        新着アイテム
      .top_contents__right
        = link_to '*' do
          もっと見る ＞
    %ul.item_list
      - @items.each do |item|
        %li.item_list__a
          = link_to item_path(item.id) do
            .item_list__a--image
              / = image_tag item.images.first.url, height: "190", width: "180"
              = image_tag '45019.png', height: "190", width: "180"
              .item_list__a--image_price
                = "¥#{item.price}"
            .item_list__a--title
              = item.name
  = render 'tops/sell_button'
  = render 'tops/footer'